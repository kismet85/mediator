<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="localdb.mediator.ChatClient">
    <TextArea fx:id="chatArea" prefHeight="300" prefWidth="600" editable="false"/>
    <ComboBox fx:id="recipientComboBox" prefWidth="200"/>
    <TextField fx:id="messageField" prefWidth="400"/>
    <Button text="Send" onAction="#sendMessage"/>
</VBox>
